<% layout("/layouts/boilerplate.ejs") %>
<body>
  <!-- <h3>All Listings</h3> -->
   <div class="marquee-container">
    <div class="marquee-text">"Welcome to Velvet Bookings — Your journey to comfort starts here!"🏡🏖️🌍</div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for (let listing of allListings) { %>
      <div class="col mb-1">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card h-100">
            <img src="<%= listing.image %>" class="card-img-top mb-2" alt="listing_image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text ms-2">
                <b><%= listing.title %></b><br />
                ₹<%= listing.price.toLocaleString("en-IN") %>/- per night  <br/>
                <i><%= listing.location %></i>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>


