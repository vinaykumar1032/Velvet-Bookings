<%if(successMsg && successMsg.length){%>
    <div class="alert alert-success d-flex align-items-center col-6 offset-3 alert-dismissible fade show" role="alert">
        <div>
            <%=successMsg%> <i class="fa-solid fa-circle-check"></i> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<%}%>

<%if(errorMsg && errorMsg.length){%>
    <div class="alert alert-danger d-flex align-items-center col-6 offset-3 alert-dismissible fade show" role="alert">
        <div>
            <%=errorMsg[0]%> <i class="fa-solid fa-triangle-exclamation"></i></i> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<%}%>